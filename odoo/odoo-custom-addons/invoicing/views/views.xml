<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="invoicing.list">
      <field name="name">Invoicing list</field>
      <field name="model">invoicing.invoicing</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="invoicing.action_window">
      <field name="name">Invoicing window</field>
      <field name="res_model">invoicing.invoicing</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="invoicing.action_server">
      <field name="name">Invoicing server</field>
      <field name="model_id" ref="model_invoicing_invoicing"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="Invoicing" id="invoicing.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="invoicing.menu_1" parent="invoicing.menu_root"/>
    <menuitem name="Menu 2" id="invoicing.menu_2" parent="invoicing.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="invoicing.menu_1_list" parent="invoicing.menu_1"
              action="invoicing.action_window"/>
    <menuitem name="Server to list" id="invoicing" parent="invoicing.menu_2"
              action="invoicing.action_server"/>

  </data>
</odoo>